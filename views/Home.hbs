<!DOCTYPE html>
<html> 
  <head>
	<title>GameDex | Home</title>
	<link rel="stylesheet" type="text/css" href="/css/Header.css">
	<link rel="stylesheet" type="text/css" href="/css/Home.css">
  </head> 
  <body>
	<!--header start-->
	{{> header username = currUser.username profilepic = currUser.profilepic password = currUser.password bio = currUser.bio fav1 = currUser.fav1 fav2 = currUser.fav2 fav3 = currUser.fav3}}
	<!--header end-->
		<div id="wlcm_banner">
			<div id="wlcm_text">
				<h2 id="maintext">GameDex</h1>
				<p id="subtext">Discuss, Discover, and Display your Games</h2>
			</div>
		</div>
		<div id="content_box_bg">
			<div id="content_box">
				<div id="group2">
					<p>Featured Games</p>
					<div id="slideshow_area">
						<!--image slider start-->
						<div id="slider">
							<div id="slides">
								<!--radio buttons start-->
								<input type="radio" name="radio_btn" id="radio1">
								<input type="radio" name="radio_btn" id="radio2">
								<input type="radio" name="radio_btn" id="radio3">
								<input type="radio" name="radio_btn" id="radio4">
								<!--radio buttons end-->
								
								<!--slide images start-->
								<div class="slide first">
									<a href="/Game/Persona%205"><img src="images/p5.png" alt=""></a>
								</div>
								<div class="slide" id="slide2">
									<a href="/Game/Hades"><img src="images/hades-featured.jpg" alt=""></a>
								</div>
								<div class="slide" id="slide3">
									<a href="/Game/Disco%20Elysium"><img src="images/disco.png" alt=""></a>
								</div>
								<div class="slide" id="slide4">
									<a href="/Game/Valorant"><img src="images/valo.jpg" alt=""></a>
								</div>
								<!--slide images end-->
								
								<!--auto nav start-->
								<div id="auto_nav">
									<div class="autobtn" id="auto_btn1"></div>
									<div class="autobtn" id="auto_btn2"></div>
									<div class="autobtn" id="auto_btn3"></div>
									<div class="autobtn" id="auto_btn4"></div>
								</div>
								<!--auto nav end-->
							</div>
							
							<!--manual nav start-->
							<div id="manual_nav">
								<label for="radio1" class="manual_btn"></label>
								<label for="radio2" class="manual_btn"></label>
								<label for="radio3" class="manual_btn"></label>
								<label for="radio4" class="manual_btn"></label>
							</div>
							<!--manual nav end-->
						</div>
						<!--image slider end-->
						
						<script type="text/javascript">
							var counter = 1;
							setInterval(function(){
								document.getElementById('radio' + counter).checked = true;
								counter++;
								if(counter > 4){
									counter = 1;
								}
							}, 5000);
						</script>
					</div>
				</div>
				<div id="group3">
					<!--review section start-->
					<p id="reviews">Recent Reviews</p>
					{{#each comments}}
					<div id="review_box">
						<div id="col1">
							<div class="col1row"><a href="/profile/{{username}}"><img src="{{profilepic}}"></img></a></div>
							<!--<div class="col1row"><a href="../My Profile/AnonProfile.html"><img src="../View Game List/Anon.jpg"></img></a></div>
							<div class="col1row"><a href="../My Profile/AnonProfile.html"><img src="../View Game List/Anon.jpg"></img></a></div>
							<div class="col1row"><a href="../My Profile/AnonProfile.html"><img src="../View Game List/Anon.jpg"></img></a></div>
							<div class="col1row"><a href="../My Profile/AnonProfile.html"><img src="../View Game List/Anon.jpg"></img></a></div>
							<div class="col1row"><a href="../My Profile/AnonProfile.html"><img src="../View Game List/Anon.jpg"></img></a></div>-->
						</div>
						<div id="col2">
								<div class="col2row">
									<p class="user_review">{{text}}</p>
								</div>
						</div>
						<div id="col3">
							<div class="col3row"><button class="like_rev_btn"><img class="like_rev" src="/images/heart.png"></img><p class="num_likes">{{likes}}</p></button></div>
							<!--<div class="col3row"><button class="like_rev_btn"><img class="like_rev" src="../Game Page/heart.png"></img><p class="num_likes">1</p></button></div>
							<div class="col3row"><button class="like_rev_btn"><img class="like_rev" src="../Game Page/heart.png"></img><p class="num_likes">5</p></button></div>
							<div class="col3row"><button class="like_rev_btn"><img class="like_rev" src="../Game Page/heart.png"></img><p class="num_likes">1</p></button></div>
							<div class="col3row"><button class="like_rev_btn"><img class="like_rev" src="../Game Page/heart.png"></img><p class="num_likes">5</p></button></div>
							<div class="col3row"><button class="like_rev_btn"><img class="like_rev" src="../Game Page/heart.png"></img><p class="num_likes">5</p></button></div>-->
						</div>
					</div>
					{{/each}}
					<!--review section end-->
				</div>
			</div>
		</div>
  </body> 
</html>